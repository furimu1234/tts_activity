{

	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": false,
		"sourceMap": true,
		"module": "ESNext",
		"target": "ES2020",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"strictNullChecks": true
	},
	"include": ["*.ts", "src/index.ts", "src/schemaTypes.ts"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
